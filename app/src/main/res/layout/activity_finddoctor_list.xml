<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F7F7F9"
    android:orientation="vertical">

    <include layout="@layout/view_title_title" />

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="0.1dp"
        android:background="@color/app_line_color" />

    <com.jws.pandahealth.component.askdoctor.view.ExpandTabView
        android:id="@+id/expandtab_view"
        android:layout_width="fill_parent"
        android:layout_height="40dp" />

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="0.1dp"
        android:background="@color/app_line_color" />
    <com.jws.pandahealth.component.app.widget.LoadingLayout
        android:id="@+id/loadinglayout"
        android:background="#F7F7F9"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="#F7F7F9"
        android:layout_height="match_parent">

        <com.ajguan.library.EasyRefreshLayout
            android:id="@+id/easylayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerview"
                android:background="#F7F7F9"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            </android.support.v7.widget.RecyclerView>
        </com.ajguan.library.EasyRefreshLayout>
        <View
            android:id="@+id/fugai"
            android:background="#90000000"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></View>
    </RelativeLayout>
    </com.jws.pandahealth.component.app.widget.LoadingLayout>
</LinearLayout>