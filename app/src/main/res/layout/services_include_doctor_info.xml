<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/iv_avatar"
        android:layout_width="58dp"
        android:layout_height="58dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="27dp"
        android:layout_marginBottom="10dp"
        android:scaleType="centerCrop"
        android:background="@drawable/shape_avatar_bg"/>
    <LinearLayout
        android:id="@+id/ll_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp"
        android:layout_below="@id/iv_avatar"
        android:layout_centerHorizontal="true">
        <ImageView
            android:id="@+id/iv_badge"
            android:layout_width="13dp"
            android:layout_height="13dp"
            android:layout_below="@id/iv_avatar"
            android:scaleType="fitCenter"
            android:layout_marginRight="7dp"
            android:layout_marginEnd="7dp"
            android:layout_marginTop="5dp"
            android:background="@mipmap/finddoctor_badge"
            />
        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="7dp"
            android:layout_marginEnd="7dp"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@color/text_color_name"
            tools:text="Dr.Cai YouLin"/>
        <TextView
            android:id="@+id/tv_professor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/text_color_office"
            tools:text="Chief Physician"/>
    </LinearLayout>


    <TextView
        android:id="@+id/tv_office"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/ll_name"
        android:layout_marginBottom="5dp"
        android:textSize="14sp"
        android:textColor="@color/text_color_office"
        tools:text="Chinese Medicine" />
    <TextView
        android:id="@+id/tv_hospital"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/tv_office"
        android:textColor="@color/text_color_hospital"
        android:textSize="14sp"
        android:layout_marginBottom="24dp"
        tools:text="Peking Union Medical College Hospital"  />
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/app_line_height"
        android:background="@color/app_line_color"
        android:layout_below="@id/tv_hospital"
        />
</RelativeLayout>