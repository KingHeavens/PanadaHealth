<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/user_login_playout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white">

    <include
        layout="@layout/view_title_title" />

    <View
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:layout_below="@+id/tool_bar"
        android:background="@color/app_line_color" />



    <LinearLayout
        android:id="@+id/line11"
        android:layout_below="@+id/line1"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="75dp"
            android:text="@string/forgetyourpassword"
            android:textColor="#333333"
            android:textSize="23dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/noworries"
            android:layout_marginTop="16dp"
            android:gravity="center_horizontal"
            android:textColor="#999999"
            android:textSize="13dp" />


    </LinearLayout>



    <View
        android:id="@+id/linet"
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:visibility="invisible"
        android:layout_below="@+id/line11"
        android:layout_marginTop="17.5dp"
        android:background="@color/app_line_color" />




    <LinearLayout
        android:id="@+id/et_pwd"
        android:layout_width="fill_parent"
        android:layout_height="49dp"
        android:layout_below="@id/line0"
        android:layout_marginBottom="33dp"
        android:layout_marginLeft="33dp"
        android:layout_marginRight="33dp"
        android:background="#F8F8F8"
        android:gravity="center"
         >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/questionsemail"
            android:textColor="#b2b2b2"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/superemail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingLeft="5dp"
            android:text="@string/supportemails"
            android:textColor="@color/app_btn_color_pressed"
            android:textSize="15dp" />

        </LinearLayout>

    <View
        android:id="@+id/line2"
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:layout_below="@id/et_pwd"
        android:visibility="invisible"
        android:background="@color/app_line_color" />

    <!-- 底部分享 -->


    <Button
        android:id="@+id/btn_findpwd"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/line2"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="33dp"
        android:layout_marginRight="33dp"
        android:layout_marginTop="13dp"
        android:background="#FBD5D9"
        android:text="@string/login"
        android:textColor="@color/white"
        android:textSize="17dp" />

    <EditText
        android:id="@+id/et_account"
        android:layout_width="fill_parent"
        android:layout_height="49dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/linet"
        android:layout_marginTop="13dp"
        android:layout_marginBottom="13dp"
        android:layout_marginLeft="33dp"
        android:layout_marginRight="33dp"
        android:background="@drawable/user_login_input_back"
        android:gravity="center_vertical"
        android:hint="@string/email"
        android:imeOptions="actionNext"
        android:inputType="text"
        android:maxLength="25"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:singleLine="true"
        android:textColor="@android:color/black"
        android:textColorHint="@color/app_text_color3"
        android:textSize="17dp" />
    <View
        android:id="@+id/line0"
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:visibility="invisible"
        android:layout_below="@+id/et_account"
        android:background="@color/app_line_color" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:layout_below="@+id/btn_findpwd"
        android:gravity="center">

        <TextView
            android:id="@+id/nevermind"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingLeft="5dp"
            android:text="@string/nevermind"
            android:textColor="@color/app_btn_color_pressed"
            android:textSize="15dp" />

    </LinearLayout>

</RelativeLayout>
