<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="80dp">
    <ImageView
        android:id="@+id/iv_avatar"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:background="@drawable/shape_avatar_bg"
        android:scaleType="center"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:layout_marginRight="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        />
    <View
        android:id="@+id/dot"
        android:layout_width="10dp"
        android:layout_height= "10dp"
        android:layout_alignTop="@id/iv_avatar"
        android:layout_alignRight="@id/iv_avatar"
        android:layout_alignEnd="@+id/iv_avatar"
        android:visibility="gone"
        android:background="@drawable/services_unread_dot"
        />
    <TextView
        android:id = "@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/iv_avatar"
        android:layout_toEndOf="@id/iv_avatar"
        android:layout_alignTop="@id/iv_avatar"
        android:textSize="18sp"
        android:lines="1"
        android:textColor="@color/text_color_name"
        tools:text="Text chat"/>
    <TextView
        android:id="@+id/tv_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="13sp"
        android:layout_toRightOf="@+id/iv_avatar"
        android:layout_toEndOf="@+id/iv_avatar"
        android:layout_alignBottom="@id/iv_avatar"
        android:lines="1"
        android:textColor="@color/text_color_hospital"
        tools:text="Dr.Cai You Lin"
        />
    <TextView
        android:id="@+id/tv_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="10dp"
        android:lines="1"
        android:textSize="13sp"
        android:text="@string/in_service"/>
    <TextView
        android:id="@+id/tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignBottom="@id/iv_avatar"
        android:textSize="13sp"
        android:lines="1"
        android:layout_marginRight="10dp"
        tools:text="12-07"
        />
</RelativeLayout>